<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
android:backgroundTint="@color/lightGreen"
    android:background="@color/white"
    tools:context=".SignUpOrLogin">

    <!-- Green Background Image -->
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/logoPageImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#3AB34A"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dustbin" />

    <LinearLayout
        android:background="@drawable/background1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="50dp"
        android:paddingHorizontal="24dp"
        android:layout_alignParentBottom="true"
        >
    <!-- Title Text-->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up or Login"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        />

    <!--CardView for Google Sign-In-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewforGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"

        android:foreground="?attr/selectableItemBackground"
        >

        <LinearLayout
            android:id="@+id/GoogleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/GoogleIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_google"/>

            <TextView
                android:id="@+id/GoogleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    &lt;!&ndash; CardView for Facebook Sign-In &ndash;&gt;-->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewforFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="#1877F2"
        android:foreground="?attr/selectableItemBackground"
        >

        <LinearLayout
            android:id="@+id/FacebookLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/FacebookIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_facebook"/>

            <TextView
                android:id="@+id/FacebookText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Facebook"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Email Sign-In -->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewforEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        >

        <LinearLayout
            android:id="@+id/EmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/EmailIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email_03"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/EmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Email"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>