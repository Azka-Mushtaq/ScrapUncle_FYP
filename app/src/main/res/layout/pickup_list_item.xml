<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pickup_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="24dp"
    android:gravity="center"
    android:orientation="horizontal">

    <!-- Order Image -->
    <ImageView
        android:id="@+id/pickup_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/curved_borders"
        android:scaleType="centerCrop"
        android:src="@drawable/img_location" />

    <!-- Order Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/pickup_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup ID: #167004"

            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pickup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Aug 2024 12:12 PM"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/pickup_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fill_curved_border"
        android:backgroundTint="#A13AB34A"
        android:gravity="center"

        android:paddingVertical="10dp"
        android:paddingHorizontal="27dp"

        android:text="Confirmed"
        android:textColor="@color/lightGreen"
        android:textStyle="bold" />


</LinearLayout>



